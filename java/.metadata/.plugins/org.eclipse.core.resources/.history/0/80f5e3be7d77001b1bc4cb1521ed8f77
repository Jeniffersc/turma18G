package LacosDeDecisao.copy;
import java.util.Scanner;
import java.lang.Math;

public class Exercicio4 {
	public static void main (String[] args)
	{
		/*
		 * Faça um programa em que permita a entrada de um número 
		 * qualquer e exiba se este número é par ou ímpar. 
		 * Se for par exiba também a raiz quadrada do mesmo; 
		 * se for ímpar exiba o número elevado ao quadrado.
		 */
		
		Scanner ler = new Scanner(System.in);
		
		double n, raiz=0.0, pot=0.0;
		
		System.out.println("Digite um número: ");
		n = ler.nextDouble();
		
		if (n % 2 == 0)
		{
			raiz = Math.sqrt(n);
			System.out.println("O número " + n + " é par. Sua raiz quadrada de é: " + raiz);
		}
		else
		{
			pot = Math.pow(n, 2);
			System.out.println("O número " + n + " é ímpar. E elevado ao quadrado é: " + pot);
		}
	}
}